{
  "name": "devtools",
  "version": "1.0.1",
  "private": true,
  "description": "DXOS devtools monorepo.",
  "homepage": "https://github.com/dxos/protocol#readme",
  "bugs": {
    "url": "https://github.com/dxos/protocol/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dxos/protocol.git"
  },
  "license": "AGPL-3.0",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "build": "wsrun -t build",
    "lint": "wsrun lint",
    "test": "wsrun test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "semistandard"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.2",
    "husky": "^3.1.0",
    "lerna": "^3.19.0",
    "lint-staged": "^9.5.0",
    "semistandard": "^14.2.0",
    "wsrun": "^5.2.4"
  },
  "semistandard": {
    "parser": "babel-eslint",
    "env": [
      "jest",
      "node",
      "browser"
    ]
  }
}
